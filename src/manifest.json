{
  "name": "Succynct",
  "version": "2012.8.18",
  "manifest_version": 2,
  "description": "A minimalist App.net Client",
  "icons": {
    "16": "img/angle.png",
    "48": "img/angle.png",
    "128": "img/angle.png"
  },
  "page_action": {
    "default_icon": "img/angle.png",
    "default_title": "Number of available characters"
  },
  "background": {
    "scripts": [ "libs/jquery-1.8.0.min.js", "libs/underscore-min.js", "libs/backbone-min.js", "js/app.js", "js/config.js", "js/background.js" ]
  },
  "minimum_chrome_version": "23",
  "options_page": "options.html",
  "permissions": [
    "https://*.app.com/*",
    "<all_urls>",
    "notifications",
    "tabs",
    "storage"
  ],
  "omnibox": { "keyword" : "adn" },
  "web_accessible_resources": [
    "img/angle.png"
  ],
  "content_scripts": [
    {
      "matches": [ "*://twitter.com/intent/tweet*" ],
      "css": [ "css/content_twitter.css" ],
      "js": [ "libs/jquery-1.8.0.min.js", "js/content_twitter.js" ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}